<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Room</title>
    <!-- Google Fonts and Icons --> 
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/room.css"> 
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="user-account">
            <div class="user-profile">
                <img src="/image/profile-img.png" alt="profile-img">
                <div class="user-detail">
                    <h3>Admin</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/image.png" alt="logo">
            <h3>BH Payment Monitoring</h3>
        </div>
        <ul class="sidebar-links">
            <div class="menu-separator"></div>
            <li><a href="Admindashboard"><span class="material-symbols-outlined">dashboard</span>Dashboard</a></li>
            <li><a href="usermanagement"><span class="material-symbols-outlined">manage_accounts</span>Tenants</a></li>
            <li><a href="room"><span class="material-symbols-outlined">room_preferences</span>Room</a></li>
            <li><a href="payment"><span class="material-symbols-outlined">payments</span>Payment</a></li>
            <li><a href="message"><span class="material-symbols-outlined">chat</span>Messages</a></li>
            <li><a href="/login"><span class="material-symbols-outlined">logout</span>Logout</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content p-4 w-100">
        <div class="sticky-header">
            <h4>Room</h4>
        </div>

        <!-- Add Room + Search + Filter -->
        <div class="add-search" style="justify-content: space-between; align-items: center;">
            <button id="addRoomBtn" class="btn btn-add">
                <span class="material-icons">add</span> Add Room
            </button>

            <div class="search-container">
                <span class="material-icons search-icon">search</span>
                <input type="text" id="searchInput" placeholder="Search ...">
            </div>

            <div class="filter-container">
                <label for="statusFilter">Filter by Status:</label>
                <select id="statusFilter">
                    <option value="All">All</option>
                    <option value="Available">Available</option>
                    <option value="Occupied">Occupied</option>
                </select>
            </div>
        </div>

        <!-- Add Room Modal -->
        <div id="addRoomModal" class="modal">
            <div class="modal-content">
                <span class="close" id="closeAddModal">&times;</span>
                <h2>Add Room</h2>
                <form id="addRoomForm">
                    <label>Room Number</label>
                    <input type="number" id="roomNumber" required>

                    <label>Room Type</label>
                    <select id="roomType" required>
                        <option value="">Select</option>
                        <option>Bed Spacer</option>
                        <option>Regular</option>
                    </select>

                    <label>Rent Amount (₱)</label>
                    <input type="number" id="rentAmount" required>

                    <label>Availability Status</label>
                    <select id="availabilityStatus" required>
                        <option value="">Select</option>
                        <option>Available</option>
                        <option>Occupied</option>
                    </select>

                    <button type="submit" class="editsaveButton">Save Room</button>
                </form>
            </div>
        </div>

        <!-- Edit Room Modal -->
<div id="editRoomModal" class="modal">
    <div class="modal-content">
        <span class="close" id="closeEditModal">&times;</span>
        <h2>Edit Room</h2>

        <form id="editRoomForm">
            <input type="hidden" id="editRoomId">

            <label>Room Number</label>
            <input type="number" id="editRoomNumber" required>

            <label>Room Type</label>
            <select id="editRoomType" required>
                <option>Bed Spacer</option>
                <option>Regular</option>
            </select>

            <label>Rent Amount (₱)</label>
            <input type="number" id="editRentAmount" required>

            <label>Availability Status</label>
            <select id="editAvailabilityStatus" required>
                <option>Available</option>
                <option>Occupied</option>
            </select>

            <button type="submit" class="editsaveButton">Update Room</button>
        </form>
    </div>
</div>


        <!-- Table -->
        <div class="table-responsive">
            <table class="reports-table">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Number</th>
                        <th>Room Type</th>
                        <th>Rent Amount</th>
                        <th>Availability Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dynamic content loaded via JS -->
                </tbody>
            </table>
        </div>
    </main>

    <!-- Scripts -->
    <script>
    // Modal open/close
    const addBtn = document.getElementById("addRoomBtn");
    const addModal = document.getElementById("addRoomModal");
    const closeAdd = document.getElementById("closeAddModal");

    addBtn.onclick = () => addModal.style.display = "block";
    closeAdd.onclick = () => addModal.style.display = "none";
    window.onclick = (event) => { if(event.target == addModal) addModal.style.display = "none"; }

    // Fetch Rooms and display
    const tableBody = document.querySelector(".reports-table tbody");
    async function fetchRooms() {
        const res = await fetch("/admin/rooms");
        const rooms = await res.json();
        tableBody.innerHTML = "";
        rooms.forEach(room => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
                <td>${room.id}</td>
                <td>${room.Room_Number}</td>
                <td>${room.Room_Type}</td>
                <td>₱${room.Rent_Amount}</td>
                <td style="color: ${room.Availability_Status==='Available'?'green':'red'}; font-weight:600;">
                    ${room.Availability_Status}
                </td>
                <td>
                  <button class="btn-edit" title="Edit">
                    <span class="material-icons" style="font-size:14px;">edit</span>
                </button>

                <button class="btn-delete" title="Delete">
                    <span class="material-icons" style="font-size:14px; color:#d9534f;">delete</span>
                </button>

                </td>
            `;
            tableBody.appendChild(tr);
        });
    }
    fetchRooms();

    // Add Room Form
   const addRoomForm = document.getElementById("addRoomForm");
addRoomForm.addEventListener("submit", async e => {
    e.preventDefault();
    const data = {
        Room_Number: document.getElementById("roomNumber").value,
        Room_Type: document.getElementById("roomType").value,
        Rent_Amount: document.getElementById("rentAmount").value,
        Availability_Status: document.getElementById("availabilityStatus").value
    };

    console.log("Sending addRoom request:", data);

    try {
        const res = await fetch("/admin/addRoom", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });

        const result = await res.json().catch(() => null);
        console.log("addRoom response status:", res.status, "body:", result);

        if (res.ok) {
            alert(result.message || "Room added");
            addRoomForm.reset();
            document.getElementById("addRoomModal").style.display = "none";
            fetchRooms();
        } else {
            // show useful info from server
            const msg = (result && (result.error || result.message)) || `Server returned ${res.status}`;
            alert("Failed to add room: " + msg);
        }
    } catch (error) {
        console.error("Network or other error adding room:", error);
        alert("Network error when adding room. Check console.");
    }
});

//edit room
document.addEventListener("click", async function (e) {
    if (e.target.closest(".btn-edit")) {
        const row = e.target.closest("tr");
        const id = row.cells[0].innerText;

        // Fill modal fields
        document.getElementById("editRoomId").value = id;
        document.getElementById("editRoomNumber").value = row.cells[1].innerText;
        document.getElementById("editRoomType").value = row.cells[2].innerText;
        document.getElementById("editRentAmount").value = row.cells[3].innerText.replace("₱", "");
        document.getElementById("editAvailabilityStatus").value = row.cells[4].innerText;

        // Show modal
        document.getElementById("editRoomModal").style.display = "block";
    }
});

//close edit modal
const editModal = document.getElementById("editRoomModal");
document.getElementById("closeEditModal").onclick = () => editModal.style.display = "none";


//save updated room
document.getElementById("editRoomForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const id = document.getElementById("editRoomId").value;

    const data = {
        Room_Number: document.getElementById("editRoomNumber").value,
        Room_Type: document.getElementById("editRoomType").value,
        Rent_Amount: document.getElementById("editRentAmount").value,
        Availability_Status: document.getElementById("editAvailabilityStatus").value
    };

    const res = await fetch(`/admin/updateRoom/${id}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
    });

    const result = await res.json();
    alert(result.message);

    editModal.style.display = "none";
    fetchRooms();
});


//delete room function
document.addEventListener("click", async function (e) {
    if (e.target.closest(".btn-delete")) {
        const row = e.target.closest("tr");
        const id = row.cells[0].innerText;

        if (!confirm("Are you sure you want to delete this room?")) return;

        const res = await fetch(`/admin/deleteRoom/${id}`, {
            method: "DELETE"
        });

        const result = await res.json();
        alert(result.message);

        fetchRooms();
    }
});


    // Search + Status Filter
    const searchInput = document.getElementById("searchInput");
    const statusFilter = document.getElementById("statusFilter");
    function filterTable() {
        const searchValue = searchInput.value.toLowerCase();
        const statusValue = statusFilter.value;
        tableBody.querySelectorAll("tr").forEach(row => {
            const rowText = row.innerText.toLowerCase();
            const statusText = row.cells[4].innerText;
            const matchesSearch = rowText.includes(searchValue);
            const matchesStatus = (statusValue==="All")||(statusText===statusValue);
            row.style.display = (matchesSearch && matchesStatus) ? "" : "none";
        });
    }
    searchInput.addEventListener("keyup", filterTable);
    statusFilter.addEventListener("change", filterTable);
    </script>
</body>
</html>
